<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/view_height_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/voilet_border"
        android:padding="2dp"
        >



            <com.customfont.edittext.FuturaBkEditText
                android:id="@+id/sText"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textColor="@color/popup_text"
                android:textSize="@dimen/text_size_16"
                android:textColorHint="@color/white_hover"
                android:imeOptions="actionNext"
                android:theme="@style/AppTheme.EditText"
                android:singleLine="true"

                />

        <TextView
            android:id="@+id/ConfirmTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_details"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/popup_subheader"
            android:paddingBottom="@dimen/margin_short_8"
            android:visibility="gone"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/remarkInputType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.EditText"
            android:layout_toLeftOf="@+id/uploadMediaLay"
            android:layout_below="@+id/contnrNoInputType"
            android:layout_marginLeft="@dimen/margin_short_5"
            android:layout_marginRight="@dimen/margin_short_5"
            android:visibility="gone"

            >





            <com.customfont.edittext.FuturaBkEditText
                android:id="@+id/remarkEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/popup_text"
                android:textSize="@dimen/text_size_16"
                android:textColorHint="@color/white_hover"
                android:gravity="top|left"
                android:inputType="textMultiLine|textCapCharacters"
                android:lines="5"
                android:textAllCaps="false"
                android:theme="@style/AppTheme.EditText"
                android:hint="@string/Enter_Remarks"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
        android:id="@+id/sealNoInputType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.EditText"
        android:layout_marginTop="@dimen/margin_short_5"
        android:layout_toLeftOf="@+id/uploadMediaLay"
        android:layout_marginLeft="@dimen/margin_short_5"
        android:layout_marginRight="@dimen/margin_short_5"

        >


        <com.customfont.edittext.FuturaBkEditText
            android:id="@+id/sealNoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/popup_text"
            android:textSize="@dimen/text_size_16"
            android:textColorHint="@color/white_border"
            android:imeOptions="actionNext"

            android:theme="@style/AppTheme.EditText"
            android:singleLine="true"
            android:hint="@string/seal_no"

            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/grossWeightInputType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.EditText"
        android:layout_toLeftOf="@+id/uploadMediaLay"
        android:layout_below="@+id/contnrNoInputType"
        android:layout_marginLeft="@dimen/margin_short_5"
        android:layout_marginRight="@dimen/margin_short_5"

        >


        <com.customfont.edittext.FuturaBkEditText
            android:id="@+id/grossWeightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/popup_text"
            android:textSize="@dimen/text_size_16"
            android:textColorHint="@color/white_border"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:theme="@style/AppTheme.EditText"
            android:singleLine="true"

            android:hint="@string/gross_weight"

            />
    </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:id="@+id/POInputType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.EditText"
            android:layout_toLeftOf="@+id/uploadMediaLay"
            android:layout_below="@+id/contnrNoInputType"
            android:layout_marginLeft="@dimen/margin_short_5"
            android:layout_marginRight="@dimen/margin_short_5"

            >


            <com.customfont.edittext.FuturaBkEditText
                android:id="@+id/POEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/popup_text"
                android:textSize="@dimen/text_size_16"
                android:textColorHint="@color/white_border"
                android:imeOptions="actionDone"
                android:theme="@style/AppTheme.EditText"
                android:singleLine="true"
                android:hint="@string/purchase_order"

                />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/ChessesInputType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.EditText"
            android:layout_toLeftOf="@+id/uploadMediaLay"
            android:layout_below="@+id/contnrNoInputType"
            android:layout_marginLeft="@dimen/margin_short_5"
            android:layout_marginRight="@dimen/margin_short_5"
            android:visibility="gone"
            >


            <EditText
                android:id="@+id/ChessesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/popup_text"
                android:textSize="@dimen/text_size_16"
                android:textColorHint="@color/white_border"
                android:imeOptions="actionDone"
                android:theme="@style/AppTheme.EditText"
                android:singleLine="true"
                android:hint="@string/Chassis_Num"

                />
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/ContrInputType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.EditText"
            android:layout_toLeftOf="@+id/uploadMediaLay"
            android:layout_below="@+id/contnrNoInputType"
            android:layout_marginLeft="@dimen/margin_short_5"
            android:layout_marginRight="@dimen/margin_short_5"
            android:visibility="gone"
            >


            <EditText
                android:id="@+id/ContrEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/popup_text"
                android:textSize="@dimen/text_size_16"
                android:textColorHint="@color/white_border"
                android:imeOptions="actionDone"
                android:theme="@style/AppTheme.EditText"
                android:singleLine="true"
                android:hint="@string/Container_Num"

                />
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_border"
            android:layout_marginTop="@dimen/margin_15"
            />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_45"
        android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_short_1"
            android:layout_marginRight="@dimen/margin_short_1"

        >



        <com.customfont.button.CalibriBoldButton
            android:id="@+id/btnCancelLoadingJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="@dimen/text_size_15"

            android:textColor="@color/popup_text"
            android:background="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_weight="1"

            />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/view_height_35"
                android:background="@color/divider"
                android:layout_gravity="center"/>


            <com.customfont.button.CalibriBoldButton
            android:id="@+id/btnLoadingJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/popup_text"
            android:background="@color/white"
            android:textAllCaps="true"
            android:layout_weight="1"
                android:textStyle="bold"

            />

</LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>