    <style name="AppTheme.EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorPrimaryTransparent</item>
        <item name="colorControlActivated">@color/colorPrimaryTransparent</item>
        <item name="colorControlHighlight">@color/colorPrimaryTransparent</item>
        <item name="editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/colorPrimaryTransparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:paddingBottom">@dimen/margin_short_7</item>
     

    </style>




    <style name="Theme.App.Search" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gray_text_transparent</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_text_transparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:paddingBottom">@dimen/margin_14</item>
