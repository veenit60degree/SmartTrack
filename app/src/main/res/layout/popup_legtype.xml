<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:background="@drawable/new_bgbig"
    >


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_centerVertical="true"
        >

    <com.customfont.textview.FuturaMediumTextView
        android:id="@+id/titleDescView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_40"

        android:text="Choose sub location"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_25"
        android:textColor="@color/popup_subheader"

        />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_short_1"
            android:background="@color/white_hover"
            android:layout_marginTop="@dimen/view_height_60"
            />


    <ListView
        android:id="@+id/legTypeListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/margin_short_5"
        android:paddingRight="@dimen/view_height_30"
        android:paddingLeft="@dimen/view_height_30"
        android:layout_marginTop="@dimen/view_height_70"
        android:paddingBottom="@dimen/margin_20"
        android:focusable="true"


        />
    </android.support.v7.widget.CardView>


</RelativeLayout>