<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_default"
    android:focusable="true"
    android:focusableInTouchMode="true"


    >

    <com.customfont.textview.KarlaBoldTextView
        android:id="@+id/appTypeTxtVw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_15"
        android:text="@string/local"
        android:layout_alignParentRight="true"
        android:textColor="@color/singin_end"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        android:visibility="gone"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/margin_25"
            >





    <LinearLayout
        android:id="@+id/loginParentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <!--<ImageView-->
            <!--android:id="@+id/logoImgOtp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/app_logo"-->
            <!--android:layout_marginLeft="@dimen/view_height_60"-->
            <!--android:layout_marginRight="@dimen/view_height_60"-->
            <!--android:layout_gravity="center"-->
            <!--android:visibility="gone"-->
            <!--/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_150"

            >

            <ImageView
                android:id="@+id/logoImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/new_logo_big"
                android:layout_marginLeft="@dimen/view_height_90"
                android:layout_marginRight="@dimen/view_height_90"
                android:layout_marginTop="@dimen/margin_25"

                />

            <FrameLayout
                android:id="@+id/OtpFram"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_height_150"
                android:background="@color/black_transparent"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/view_height_55"
                android:visibility="gone"

                >

            </FrameLayout>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_10"
        >

        <com.customfont.textview.KarlaBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_29"
            android:text="Welcome"
            android:textColor="@color/text_new_heading"
            android:textSize="@dimen/view_height_30"
            android:textStyle="bold"
            android:textAllCaps="false"

            />

        <com.customfont.textview.KarlaRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/popup_header"
            android:textSize="@dimen/text_size_13"
            android:text="@string/login_desc"
            android:layout_marginLeft="@dimen/margin_29"
            android:textAllCaps="false"

            />

        <com.customfont.textview.KarlaBoldTextView
            android:id="@+id/lblLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_height_40"
            android:layout_marginTop="@dimen/view_height_40"
            android:text="LOGIN"
            android:textColor="@color/singin_end"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"

            />


        <com.gigamole.library.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_height_40"
            android:paddingRight="@dimen/view_height_40"
            android:layout_marginTop="@dimen/margin_10"
            app:sl_shadow_angle="45"
            app:sl_shadow_color="#99a3e8"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_radius="5dp"


            >



            <RelativeLayout
                android:id="@+id/loginFieldView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/view_height_30"
                android:layout_marginLeft="@dimen/view_height_30"

                >






                    <com.customfont.edittext.MoskMediumEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16"
                        android:drawableRight="@drawable/ic_person_outline"
                        android:imeOptions="actionNext"
                        android:theme="@style/Theme.App.Base"
                        android:singleLine="true"
                        android:hint="@string/userame"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_10"
                        android:background="@drawable/user_name"


                        />






                    <com.customfont.edittext.MoskMediumEditText
                        android:id="@+id/passwrdEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16"
                        android:drawableRight="@drawable/ic_lock_outline"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:theme="@style/Theme.App.Base"
                        android:singleLine="true"
                        android:hint="@string/password"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingRight="@dimen/margin_15"
                        android:paddingTop="@dimen/margin_10"
                        android:paddingBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_21"
                        android:background="@drawable/user_name"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@+id/emailEditText"


                        />






            </RelativeLayout>
        </com.gigamole.library.ShadowLayout>



        <com.customfont.textview.SourceSansProRegularTextView
            android:id="@+id/forgotPassTxtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ForgotPassword"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_size_13"
            android:layout_gravity="right"
            android:paddingTop="@dimen/margin_short_3"
            android:paddingBottom="@dimen/margin_short_8"
            android:paddingLeft="@dimen/margin_short_8"
            android:layout_marginRight="@dimen/view_height_40"
            android:layout_below="@+id/passwrdEditText"
            android:visibility="gone"
            />



        <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_height_30"
            android:paddingRight="@dimen/view_height_30"
            android:layout_marginRight="@dimen/view_height_40"
            android:layout_marginTop="@dimen/margin_12"
            app:sl_shadow_angle="45"
            app:sl_shadow_color="#996CACDE"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_radius="5dp"

            android:layout_gravity="right"
            >

        <com.customfont.button.MoskMediumButton
            android:id="@+id/btnLogin"
            android:layout_width="@dimen/view_height_130"
            android:layout_height="@dimen/view_height_45"
            android:text="@string/sign_in"
            android:textSize="@dimen/text_size_20"
            android:layout_marginTop="@dimen/margin_23"

            android:textColor="@color/white"
            android:background="@drawable/sign_in"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"


            />


</com.gigamole.library.ShadowLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_short_5"
            >

        <Button
            android:id="@+id/localUrlBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/local"
            android:layout_marginRight="@dimen/margin_short_5"
            />

        <Button
            android:id="@+id/productionUrlBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/production"
            android:layout_marginLeft="@dimen/margin_short_5"
            />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>





</RelativeLayout>

    </ScrollView>



    <FrameLayout
        android:id="@+id/otp_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        />


    <com.customfont.textview.SourceSansProRegularTextView
        android:id="@+id/loginAppVesrionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Poweredby"
        android:textColor="@color/popup_header"
        android:textSize="@dimen/text_size_13"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/margin_short_8"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/margin_short_3"
        android:textAllCaps="false"

        />


    <com.customfont.textview.SourceSansProRegularTextView
        android:id="@+id/appVersionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/App_Version"
        android:textColor="@color/popup_header"
        android:textSize="@dimen/text_size_13"
        android:paddingLeft="@dimen/margin_short_8"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/loginAppVesrionTV"
        android:textAllCaps="false"
        />



    <ProgressBar
        android:id="@+id/progressBarlogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />


</RelativeLayout>



