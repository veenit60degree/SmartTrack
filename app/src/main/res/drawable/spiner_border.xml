<?xml version="1.0" encoding="utf-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item><layer-list>
    <item>
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="@color/white" />
            <!-- border -->

            <padding
                android:right="10dp"
                />
            <stroke android:width="2dp" android:color="@color/username_border" />
            <!-- corner roundness -->
            <corners android:radius="@dimen/view_height_300" />

        </shape>
    </item>
    <item >
        <bitmap android:gravity="center|right"
            android:src="@drawable/dd" />
    </item>
</layer-list></item>
</selector>