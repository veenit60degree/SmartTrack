<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20">

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/voilet_border"

        >



        <com.customfont.textview.FuturaMediumTextView
            android:id="@+id/titleDescView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter container number"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/margin_19"
            android:layout_marginBottom="@dimen/margin_25"
            android:textColor="@color/popup_subheader"
            />



        <com.gigamole.library.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_height_40"
            android:paddingRight="@dimen/view_height_40"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            app:sl_shadow_angle="45"
            app:sl_shadow_color="#99a3e8"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_radius="5dp"


            >
        <com.customfont.edittext.FuturaBkEditText
                android:id="@+id/ContrEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_colornew"
                android:textSize="@dimen/text_size_16"
                android:imeOptions="actionDone"
                android:theme="@style/AppTheme.EditText"
                android:singleLine="true"
                android:hint="@string/Container_Num"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_15"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10"
                android:maxLines="1"
                android:background="@drawable/user_name"

                />
        </com.gigamole.library.ShadowLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_border"
            android:layout_below="@+id/grosswtTV"
            android:layout_marginTop="@dimen/view_height_30"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_45"
            android:orientation="horizontal"

            >



            <com.customfont.button.CalibriBoldButton
                android:id="@+id/btnCancelAsignJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="@dimen/text_size_16"

                android:textColor="@color/popup_text"
                android:background="@color/white"
                android:textAllCaps="true"
                android:layout_weight="1"

                />
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/view_height_35"

                android:background="@color/divider"
                android:layout_gravity="center"/>

            <com.customfont.button.CalibriBoldButton
                android:id="@+id/btnAsignJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textSize="@dimen/text_size_16"
                android:textAllCaps="true"
                android:textColor="@color/popup_text"
                android:background="@color/white"
                android:layout_weight="1"

                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>